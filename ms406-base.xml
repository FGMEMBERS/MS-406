<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <author>BARANGER Emmanuel (3D/FDM)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>0.8</fuel-fraction>

    <startup>
     <splash-texture>Aircraft/MS-406/ms406-splash.png</splash-texture>
    </startup>

    <sound>
      <path>Aircraft/MS-406/Sounds/ms406-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/MS-406/Models/ms406.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <submodels> 
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/MS-406/Models/Effects/guns/submodels.xml</path>
    </submodels>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                            <!-- 0 immat -->
        <int type="int" n="1">  0 </int>                                            <!-- 1 immat -->
        <int type="int" n="2">  0 </int>                                            <!-- 2 immat -->
        <int type="int" n="3">  0 </int>                                            <!-- 3 immat -->
        <int type="int" n="4">  0 </int>                                            <!-- 4 immat -->
        <int type="int" n="5">  0 </int>                                            <!-- 5 immat -->
        <int type="bool" n="6"> 1 </int>                                            <!-- 6 smoke/bomb/torpedo -->
        <int type="int" n="7">  0 </int>                                            <!-- 7 color -->
        <int type="bool" n="8" alias="/controls/lighting/nav-lights">  0 </int>     <!-- 8 nav-lights -->
        <int type="double" n="9" alias="/sim/model/lights/beacon/state"> 0 </int>   <!-- 9 beacon-lights -->
        <int type="double" n="10" alias="/sim/model/lights/strobe/state"> 0 </int>  <!--10 strobe-lights -->
        <int type="bool" n="11" alias="/controls/lighting/landing-lights"> 0 </int> <!--11 landing-lights -->
        <int n="12" alias="/controls/electric/key-pos">  0 </int>                   <!--12 key position -->
        <float n="2" alias="/position/gear-agl-m">  0 </float>                      <!--2 altitude for MP shadow -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
      </generic>
    </multiplay>

    <help>
      <title>Morane-Saulnier MS.406</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
      <key>
        <name>e</name>
        <desc>Guns fire</desc>
      </key>
    </help>

    <menubar include="Dialogs/ms406-menu.xml"/>

  </sim>

  <yasim>
    <vg33>
      <pilot-lb>180</pilot-lb>
    </vg33>
  </yasim>

  <engines>
    <engine>
      <rpm type="double">700</rpm>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/ms406-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/MS-406/Nasal/doors.nas</file>
    </doors>
    <ms406>
      <file>Aircraft/MS-406/Nasal/immat.nas</file>
      <file>Aircraft/MS-406/Nasal/liveries.nas</file>
      <file>Aircraft/MS-406/Nasal/light.nas</file>
    </ms406>
    <guns>
      <file>Aircraft/MS-406/Nasal/weapons.nas</file>
      <file>Aircraft/MS-406/Nasal/revi.nas</file>
    </guns>
  </nasal>

</PropertyList>

