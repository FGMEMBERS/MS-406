<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>inttourvitres</object-name>
    <object-name>inttourcanopy</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intcanopy</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intcanopy</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intcanopy</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/MS-406/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -0.210 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.460 </z-m>
    </offsets>
  </model>

  <!-- Planches de bord  -->
  <model>
    <path>Aircraft/MS-406/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -0.734 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.584 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>IntAllCanopy</name>
    <object-name>inttourcanopy</object-name>
    <object-name>intcanopy</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntAllCanopy</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <factor> 0.7 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

